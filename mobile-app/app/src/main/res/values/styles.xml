<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_primary_text">@color/colorPrimarytext</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- used on row_spn.xml -->
    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">@color/grey</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

    <!-- used on dialog -->
    <style name="SimpleDialog" parent="Material.App.Dialog.Simple.Light">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
        <item name="android:textColor">@color/colorSecondText</item>
    </style>

    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>

    <!-- used on the button-->
    <style name="RaiseWaveButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/bg_bt_raise</item>
        <item name="rd_leftPadding">1dp</item>
        <item name="rd_topPadding">1dp</item>
        <item name="rd_rightPadding">1dp</item>
        <item name="rd_bottomPadding">2dp</item>
    </style>

    <!-- used on update_timer.xml-->
    <style name="RaiseWaveButtonRippleStyleUpdate" parent="RaiseWaveButtonRippleStyle">
        <item name="android:background">@drawable/btn_update_time</item>
    </style>

    <!-- used on activity_history_point.xml -->
    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/colorSecondText</item>
        <item name="android:textColorSecondary">@color/colorSecondText</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>

    <!-- SnackBar Style -->
    <style name="SnackBarSingleLine" parent="Material.Widget.SnackBar.Mobile">
        <item name="sb_text">No connection.</item>
        <item name="sb_actionText">REFRESH</item>
        <item name="sb_duration">0</item>
    </style>

</resources>
